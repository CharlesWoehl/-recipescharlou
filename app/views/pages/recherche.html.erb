<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-sm-6 title-category-list">
      <span>Votre recherche</span>
      <span class="result-search"><%= params[:query] %></span>
    </div>
    <% @recipes.each do |recipe| %>
      <div class="col-md-3 col-sm-6 mb-5">
        <%= link_to recipe_path(recipe) do %>
          <div class="pic-card-category">
            <% if recipe.photo.present? %>
              <%= cl_image_tag recipe.photo.key, class: "card-img-top" %>
            <% else %>
              <img src="https://library.elementor.com/food-blog-flexbox/wp-content/uploads/sites/232/2022/02/how2_Post_ft_image3.jpg" class="card-img-top" alt="...">
            <% end %>
          </div>
        <% end %>
          <div class="title-card-category">
            <%= recipe.name %>
          </div>
          <div class="description-card-category">
            <%= recipe.description %>
          </div>
      </div>
    <% end %>
  </div>
</div>
