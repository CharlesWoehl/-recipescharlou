
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-7 col-sm-12 bg-white d-flex flex-column justify-content-center">
      <p class="title-show-recipe"><%= @recipe.name %></p>
      <p class="resume-short-show-recipe"><%= @recipe.description %></p>
      <p class="resume-short-show-recipe">

</p>
    </div>
   <div class="col-lg-5 col-sm-12 p-0">
  <div class="photo-show-recipe">
    <% if @recipe.photo.present? %>
      <%= cl_image_tag(@recipe.photo.key, :transformation => [
        {:width => 1000, :crop => "scale"},
          {:quality => "auto"},
          {:fetch_format => :auto}
        ]) %>
    <% end %>
  </div>
</div>
      <div class="recipe-show-recipe p-4">
        <%= @recipe.recipe.html_safe %>
      </div>
  </div>
</div>
